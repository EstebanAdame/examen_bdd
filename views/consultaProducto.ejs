    <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>

    <title>Productos</title>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">Navbar</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/">Inicio</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="consultaUsuario">Usuarios</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="consultaProducto">Productos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="consultaPedido">Pedidos</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container text-center">
    <!-- Content here -->
    <h1>TEST</h1>
    <a href="/saveProducto" class="btn btn-outline-info">Registrar producto</a>
    <table class="table table-bordered table-striped text-center mt-4">
        <thead>
        <tr class="bg-primary text-white">
            <th scope="col">ID</th>
            <th scope="col">Nombre Producto</th>
            <th scope="col">Precio</th>
            <th scope="col">Marca</th>
            <th scope="col">Cantidad</th>
            <th scope="col">Acciones</th>
        </tr>
        </thead>
        <tbody>
        <% result1.forEach((producto1_v)=> {%>
            <%result2.forEach((producto2_v)=>{%>
                <%if(producto1_v.idProducto == producto2_v.idProducto){%>
                    <tr>
                        <td><%= producto1_v.idProducto%></td>
                        <td><%= producto1_v.nombreProducto%></td>
                        <td><%= producto1_v.precio%></td>
                        <td><%= producto2_v.marca%></td>
                        <td><%= producto2_v.cantidad%></td>
                        <td>
                            <a href="/editProducto/<%= producto1_v.idProducto%>" class="btn btn-outline-info">Editar</a>
                            <a href="/deleteProducto/<%= producto1_v.idProducto%>" class="btn btn-outline-danger">Borrar</a>
                        </td>
                    </tr>
                <%}%>
            <%});%>
        <% }); %>
        </tbody>
    </table>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</body>
</html>